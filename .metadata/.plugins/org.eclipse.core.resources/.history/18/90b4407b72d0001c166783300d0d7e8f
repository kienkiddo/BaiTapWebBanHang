<script>	
	function fSubmit(){
		$.ajax({
			url: "dang-ky",
			type: "post",
			data: $("#form").serialize(),
			success: function(res){
				console.log(res);
				//$("#notify").html(res); 
				$.notify($("#btn"), res, {
                className: "info",
                position: "top-center"
              });
				
			}
		})
	}
</script>