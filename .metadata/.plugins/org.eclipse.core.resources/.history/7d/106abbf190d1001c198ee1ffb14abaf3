<script>
	$(document).ready(function(){
		$("#color").val(${item.colorId});
		$("#type").val(${item.type});
		$("#isNew").val(${item.new});
	});
	
	function fEditStatus(status){
		$.ajax({
			url: "editItem",
			type: "post",
			data: "action=EditStatus&id=${item.id}&status=" + status,
			success: function(res){
				if (res == "OK"){
					window.location.replace("view");
				}
			}
		})
	}
</script>



