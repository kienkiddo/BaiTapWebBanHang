	function load() {
		$.ajax({
			url : "danh-sach-san-pham",
			type : "post",
			data : "type=${type}&cost=" + $("#cost").val() + "&size="
					+ $("#size").val() + "&color=" + $("#color").val()
					+ "&sort=" + $("#sort").val(),
			success : function(res) {

			}
		});
	}
</script>